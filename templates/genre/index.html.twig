{% extends 'base.html.twig' %}

{% block title %}Жанр{% endblock %}

{% block body %}
    <h1>Жанр</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.name }}</td>
                <td>
                    <a href="{{ path('app_genre_show', {'id': genre.id}) }}">Показать</a>
                    <a href="{{ path('app_genre_edit', {'id': genre.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_genre_new') }}">Создать новую запись</a>
{% endblock %}
